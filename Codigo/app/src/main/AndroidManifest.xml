            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".activitys.CategoriaActivity"
            android:label="@string/appname_categorias"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activitys.InicialLogadoActivity" />
        <activity
