<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activitys.JogoActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/layoutJogoImagem"
        android:layout_marginBottom="15dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/gallows"
            android:id="@+id/imgForcaJogo"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tempo Restante - 01:20"
            android:textAlignment="center"
            android:id="@+id/txvTempoRestanteJogo"
            android:typeface="serif"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categoria - "
            android:textAlignment="center"
            android:id="@+id/txvCategoriaPalavraJogo"
            android:typeface="serif"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="_ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _"
            android:typeface="serif"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:id="@+id/txvPalavraJogo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/layoutJogoTeclado"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnJogoQ"
                android:text="Q"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnJogoW"
                android:text="W"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnJogoE"
                android:text="E"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnJogoR"
                android:text="R"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnJogoT"
                android:text="T"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnJogoY"
                android:text="Y"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnJogoU"
                android:text="U"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnJogoI"
                android:text="I"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnJogoO"
                android:text="O"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnJogoP"
                android:text="P"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnJogoA"
                android:text="A"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnJogoS"
                android:text="S"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnJogoD"
                android:text="D"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnJogoF"
                android:text="F"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnJogoG"
                android:text="G"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnJogoH"
                android:text="H"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnJogoJ"
                android:text="J"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnJogoK"
                android:text="K"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnJogoL"
                android:text="L"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnJogoÇ"
                android:text="Ç"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnJogoZ"
                android:text="Z"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary"
                android:layout_marginLeft="45dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnJogoX"
                android:text="X"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnJogoC"
                android:text="C"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnJogoV"
                android:text="V"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnJogoB"
                android:text="B"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnJogoN"
                android:text="N"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnJogoM"
                android:text="M"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary"
                android:layout_marginRight="45dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
